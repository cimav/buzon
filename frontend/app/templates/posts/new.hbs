<div class="container post-container">
  <div class="post-single post-new" id="post-new-div">

    <div class="row post-single-header">
      <div class="col-sm-8">
        <table>
          <tr>
            <td class="post-index-picture"><img src={{session.account.picture_url}} class="img-circle"></td>
            <td>
              <a href="#">{{session.account.full_name}}</a><br/>
            </td>
          </tr>
        </table>
      </div>
      <div class="col-sm-4">
        <div class="post-new-title">Nueva</div>
      </div>
    </div>
        
    <div class="row">
      <div class="col-sm-4">
        <label class="control-label">Tipo:</label> 
        {{#x-select action="selectType" id="type-select" value=model.post_type class="form-control"}}
           {{#each post_types as |post_type|}}
            {{#x-option value=post_type}}
              {{post_type}}
            {{/x-option}}
          {{/each}}
        {{/x-select}}
      </div>
      <div class="col-sm-8">
        <label class="control-label">Dirigida a:</label> 
        {{#x-select action="selectGroup" id="group-select" value=model.group class="form-control"}}
          {{#x-option value="0"}}Selecciona un grupo{{/x-option}}
          {{#each groups as |g|}}
            {{#x-option value=g}}
              {{g.name}}
            {{/x-option}}
          {{/each}}
        {{/x-select}}
        <div id="error-no-grupo" class="alert alert-danger" role="alert">Es necesario elegir un grupo</div>
      </div>
    </div>
    <div class="row post-new-subject">
      <div class="col-sm-12">
        <label class="control-label">Asunto:</label><br/>
        {{input value=model.subject classNames="form-control"}}<br/>
        <div id="error-no-subject" class="alert alert-danger" role="alert">Es necesario proporcionar el asunto</div>
      </div>
    </div>
    <div class="row post-new-body">
      <div class="col-sm-12">
        <label class="control-label">Mi {{model.post_type}}:</label><br/>
        {{textarea value=model.body rows="12" classNames="form-control"}}<br/>
        <div id="error-no-body" class="alert alert-danger" role="alert">Es necesario proporcionar detalles</div>
      </div>
    </div>
    <div class="row post-new-button">
      <div class="col-sm-12">
        <button class="btn btn-success text-right" {{action 'addNewPost'}}>Enviar nueva {{model.post_type}}</button>
      </div>
    </div>

  </div>
  
</div>
{{outlet}}
